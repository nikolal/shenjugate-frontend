{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": "src",
    "paths": {
      "@screens/*": ["screens/*"],
      "@components/*": ["components/*"],
      "@navigator/*": ["navigator/*"],
      "@api/*": ["api/*"],
      "@images/*": ["images/*"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx"]
}
